import pymc as pm
import pandas as pd
import numpy as np
import arviz as az

#aici citim din fisier
df = pd.read_csv("Prices.csv")

y = df["Price"].values
x1 = df["Speed"].values
x2 = np.log(df["HardDrive"].values)

x1_mean, x1_std = x1.mean(), x1.std()
x2_mean, x2_std = x2.mean(), x2.std()

x1_s = (x1 - x1_mean) / x1_std
x2_s = (x2 - x2_mean) / x2_std

y_mean, y_sd = y.mean(), y.std()

#a
with pm.Model() as model:
    alpha = pm.Normal("alpha", mu=y_mean, sigma=5 * y_sd)
    beta1 = pm.Normal("beta1", mu=0, sigma=2 * y_sd)
    beta2 = pm.Normal("beta2", mu=0, sigma=2 * y_sd)
    sigma = pm.HalfNormal("sigma", sigma=2 * y_sd)

    mu = alpha + beta1 * x1_s + beta2 * x2_s

    y_obs = pm.Normal("y_obs", mu=mu, sigma=sigma, observed=y)

    trace = pm.sample(2000, tune=1000, target_accept=0.9, random_seed=42)

print(az.summary(trace, var_names=["alpha", "beta1", "beta2", "sigma"]))

#b)
hdi_95 = az.hdi(trace, var_names=["beta1", "beta2"], hdi_prob=0.95)

print("\n95% hdi:")
print(f"beta1: [{hdi_95['beta1'].values[0]:.2f}, {hdi_95['beta1'].values[1]:.2f}]")
print(f"beta2: [{hdi_95['beta2'].values[0]:.2f}, {hdi_95['beta2'].values[1]:.2f}]")

#c)sunt predictorii utili?
if hdi_95["beta1"].values[0] > 0 or hdi_95["beta1"].values[1] < 0:
    print("speed este predictor util (hdi nu contine 0)")
else:
    print("speed nu este predictor util")

if hdi_95["beta2"].values[0] > 0 or hdi_95["beta2"].values[1] < 0:
    print("hard drive este predictor util (hdi nu contine 0)")
else:
    print("hard drive nu este predictor util")

#d)
x1_new = 33
x2_new = np.log(540)

x1_new_s = (x1_new - x1_mean) / x1_std
x2_new_s = (x2_new - x2_mean) / x2_std

alpha_s = trace.posterior["alpha"].values.flatten()
beta1_s = trace.posterior["beta1"].values.flatten()
beta2_s = trace.posterior["beta2"].values.flatten()

mu_samples = alpha_s + beta1_s * x1_new_s + beta2_s * x2_new_s
mu_hdi_90 = az.hdi(mu_samples, hdi_prob=0.90)

print(f"media: {mu_samples.mean():.2f}")
print(f"90% hdi: [{mu_hdi_90[0]:.2f}, {mu_hdi_90[1]:.2f}]")

#e)
sigma_s = trace.posterior["sigma"].values.flatten()
y_pred = np.random.normal(mu_samples, sigma_s)
y_pred_hdi_90 = az.hdi(y_pred, hdi_prob=0.90)

print(f"media: {y_pred.mean():.2f}")
print(f"90% hdi: [{y_pred_hdi_90[0]:.2f}, {y_pred_hdi_90[1]:.2f}]")

#bonus
premium = (df["Premium"].str.lower() == "yes").astype(int).values

with pm.Model() as model_premium:
    alpha = pm.Normal("alpha", mu=y_mean, sigma=5 * y_sd)
    beta1 = pm.Normal("beta1", mu=0, sigma=2 * y_sd)
    beta2 = pm.Normal("beta2", mu=0, sigma=2 * y_sd)
    beta3 = pm.Normal("beta3", mu=0, sigma=2 * y_sd)
    sigma = pm.HalfNormal("sigma", sigma=2 * y_sd)

    mu = alpha + beta1 * x1_s + beta2 * x2_s + beta3 * premium
    y_obs = pm.Normal("y_obs", mu=mu, sigma=sigma, observed=y)

    trace_p = pm.sample(2000, tune=1000, target_accept=0.9, random_seed=42)

hdi_beta3 = az.hdi(trace_p, var_names=["beta3"], hdi_prob=0.95)
beta3_mean = trace_p.posterior["beta3"].mean().values

print(f"media beta3: {beta3_mean:.2f}")
print(f"95% hdi: [{hdi_beta3['beta3'].values[0]:.2f}, {hdi_beta3['beta3'].values[1]:.2f}]")

if hdi_beta3["beta3"].values[0] > 0:
    print("premium creste pretul")
elif hdi_beta3["beta3"].values[1] < 0:
    print("premium scade pretul")
else:
    print("premium nu are efect semnificativ")
