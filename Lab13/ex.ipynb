def fit_model(order, x, y):
    with pm.Model() as model:
        beta = pm.Normal("beta", mu=0, sigma=10, shape=order + 1)
        sigma = pm.HalfNormal("sigma", sigma=1)

        mu = sum(beta[i] * x**i for i in range(order + 1))
        y_obs = pm.Normal("y_obs", mu=mu, sigma=sigma, observed=y)

        trace = pm.sample(1000, tune=1000, return_inferencedata=True)

    return trace


trace_lin = fit_model(1, x, y)
trace_quad = fit_model(2, x, y)
trace_cubic = fit_model(3, x, y)



print("Model liniar:")
print(az.waic(trace_lin))
print(az.loo(trace_lin))

print("\nModel quadratic:")
print(az.waic(trace_quad))
print(az.loo(trace_quad))

print("\nModel cubic:")
print(az.waic(trace_cubic))
print(az.loo(trace_cubic))

#compararea vizuala

x_plot = np.linspace(x.min(), x.max(), 200)

def mean_curve(trace, order):
    beta_mean = trace.posterior["beta"].mean(
        dim=("chain", "draw")
    ).values
    y = 0
    for i in range(order + 1):
        y += beta_mean[i] * x_plot**i
    return y

y_lin = mean_curve(trace_lin, 1)
y_quad = mean_curve(trace_quad, 2)
y_cubic = mean_curve(trace_cubic, 3)

plt.scatter(x, y, label="Date", color="black")
plt.plot(x_plot, y_lin, label="Liniar", linestyle="--")
plt.plot(x_plot, y_quad, label="Quadratic")
plt.plot(x_plot, y_cubic, label="Cubic")
plt.legend()
plt.title("Comparare vizuala a modelelor")
plt.show()

