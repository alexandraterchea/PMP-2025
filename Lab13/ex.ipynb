import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import pymc as pm
import arviz as az

data = pd.read_csv("dummy.csv", header=None, sep='\s+')

x = data.iloc[:, 0].values
y = data.iloc[:, 1].values

plt.scatter(x, y)
plt.xlabel("x")
plt.ylabel("y")
plt.title("Datele initiale")
plt.show()

order = 5

with pm.Model() as model_p:
    beta = pm.Normal("beta", mu=0, sigma=10, shape=order + 1)
    sigma = pm.HalfNormal("sigma", sigma=1)

    mu = 0
    for i in range(order + 1):
        mu += beta[i] * x**i

    y_obs = pm.Normal("y_obs", mu=mu, sigma=sigma, observed=y)

    trace = pm.sample(1000, tune=1000, return_inferencedata=True)


x_plot = np.linspace(x.min(), x.max(), 200)
beta_mean = trace.posterior["beta"].mean(dim=("chain", "draw")).values

y_plot = 0
for i in range(order + 1):
    y_plot += beta_mean[i] * x_plot**i

plt.scatter(x, y, label="Date")
plt.plot(x_plot, y_plot, color="red", label="Ordin 5, sd=10")
plt.legend()
plt.title("Model polinomial ordin 5")
plt.show()


#sd=100
with pm.Model() as model_sd_100:
    beta = pm.Normal("beta", mu=0, sigma=100, shape=order + 1)
    sigma = pm.HalfNormal("sigma", sigma=1)

    mu = sum(beta[i] * x**i for i in range(order + 1))

    y_obs = pm.Normal("y_obs", mu=mu, sigma=sigma, observed=y)

    trace_100 = pm.sample(1000, tune=1000, return_inferencedata=True)


