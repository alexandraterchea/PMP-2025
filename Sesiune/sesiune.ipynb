  p=pm.math.sigmoid(a+b_tempc*y_tempc+b_humidity*z_humidity+b_wind*w_wind)
  rentals_obs=pm.Bernoulli("y_obs",p=p,observed=x_rental)
  trace=pm.sample(1000,tune=1000,progressbar=False)

a_mean=trace.posterior["a"].mean().item()
