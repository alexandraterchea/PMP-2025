import numpy as np
from hmmlearn.hmm import MultinomialHMM

startprob = np.array([0.4, 0.3, 0.3])

transmat = np.array([
    [0.6, 0.3, 0.1],
    [0.2, 0.7, 0.1],
    [0.3, 0.2, 0.5]
])

emissionprob = np.array([
    [0.1, 0.7, 0.2],
    [0.05, 0.25, 0.7],
    [0.8, 0.15, 0.05]
])
#a)
model = MultinomialHMM(n_components=3, init_params="")
model.startprob_ = startprob
model.transmat_ = transmat
model.emissionprob_ = emissionprob
#b)
obs = np.array([[1], [2], [0]])
log_prob = model.score(obs)
prob = np.exp(log_prob)
print(prob)
#c)
obs = np.array([[1], [2], [0]])
states = model.predict(obs)
print(states)  
#d)
target = np.array([[1], [2], [0]])
matches = 0
n_seq = 10000
for _ in range(n_seq):
    obs, _ = model.sample(3)
    if np.array_equal(obs, target):
        matches += 1
empirical_prob = matches / n_seq
print(empirical_prob)

