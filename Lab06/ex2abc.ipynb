import numpy as np
import arviz as az


alpha_prior = 1
beta_prior = 0
n = 10
total_calls = 180


alpha_post = alpha_prior + total_calls
beta_post = beta_prior + n


posterior_samples = np.random.gamma(shape=alpha_post, scale=1/beta_post, size=10000)


az.plot_posterior(posterior_samples, hdi_prob=0.94)
hdi = az.hdi(posterior_samples, hdi_prob=0.94)
mode = (alpha_post - 1) / beta_post

print("94% HDI:", hdi)
print("Mode:", mode)
