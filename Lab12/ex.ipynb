import pandas as pd
import pymc as pm
import numpy as np

data = pd.read_csv("date_promovare_examen.csv")
print(data.head())

print(data["promovat"].value_counts())

X_studiu = data["ore_studiu"].values
X_somn = data["ore_somn"].values
y = data["promovat"].values

with pm.Model() as model:
    a = pm.Normal("a", 0, 10)
    b_studiu = pm.Normal("b_studiu", 0, 10)
    b_somn = pm.Normal("b_somn", 0, 10)

   
    p = pm.math.sigmoid(a + b_studiu * X_studiu + b_somn * X_somn)
    y_obs = pm.Bernoulli("y_obs", p=p, observed=y)
    trace = pm.sample(1000, tune=1000, progressbar=False)

a_mean = trace.posterior["a"].mean().item()
b_studiu_mean = trace.posterior["b_studiu"].mean().item()
b_somn_mean = trace.posterior["b_somn"].mean().item()

print(a_mean, b_studiu_mean, b_somn_mean)

p_pred = 1 / (1 + np.exp(-(a_mean + b_studiu_mean * X_studiu + b_somn_mean * X_somn)))
y_pred = (p_pred >= 0.5).astype(int)

accuracy = (y_pred == y).mean()
print("Acuratete:", accuracy)

print("Coeficient ore studiu:", b_studiu_mean)
print("Coeficient ore somn:", b_somn_mean)

